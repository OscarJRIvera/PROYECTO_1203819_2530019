</body>
<form asp-action="CambiarMaximimo" asp-controller="Pacientes">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="input-group mb-3">
        <label style="color:darkblue" asp-for="maximo" Value:"Maximo de pacientes a vacunar" class="control-label"></label>
        <div style="text-align :center;">
            <input asp-for="maximo" type="text" class="form-control" placeholder="Cantidad maxima de pacientes a Vacunar" aria-label="x" aria-describedby="basic-addon2" required>
        </div>
        <span asp-validation-for="maximo" class="text-danger"></span>
        <div class="form-group">
            <input type="submit" value="Ingresar Datos" class="btn btn-primary" />
        </div>
    </div>
    
</form>
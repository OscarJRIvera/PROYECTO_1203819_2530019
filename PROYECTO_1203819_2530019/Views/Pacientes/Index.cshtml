@model IEnumerable<PROYECTO_1203819_2530019.Models.Paciente>

@{ ViewData["Title"] = "Index"; }

<body>
    <header class="registro">

        <h1 style="color:darkblue">Index de pacientes Registrados</h1>

    </header>
</body>
<a style="color: black" asp-action="Registro" class="btn btn-primary  btn-block" role="button">Registrar otro Paciente</a>
<a style="color: black" asp-action="Vacunacion" class="btn btn-secondary btn-block" role="button">Vacunacion</a>
<a style="color: black" asp-action="InfoHospital" class="btn btn-primary  btn-block" role="button">Regresar al centro de vacunacion</a>

<table class="table table-success table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DPI)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Municipio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Edad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prioridad)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Nombre)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Apellido)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DPI)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Departamento)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Municipio)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Edad)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Prioridad)
    </td>
</tr>}
    </tbody>
</table>

